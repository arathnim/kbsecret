#!/usr/bin/env ruby
# frozen_string_literal: true

require "kbsecret"

include KBSecret

cmd = CLI.new do
  slop do |o|
    o.banner = <<~EOS
      Usage:
        kbsecret stash-file <record> [file]
    EOS

    o.string "-s", "--session", "the session to add to", default: :default
  end

  dreck errors: false do
    string :label
    string :filename
  end

  ensure_session!
end

session  = Session.new label: cmd.opts[:session]
label    = cmd.args[:label]
filename = cmd.args[:filename]

cmd.die "Missing a record label to create." unless label

contents = if filename.empty? || filename == "-"
             STDIN.read
           elsif File.file?(filename)
             File.read(filename)
           else
             cmd.die "That file doesn't exist."
           end

session.add_record(:unstructured, label, contents)
