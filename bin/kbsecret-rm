#!/usr/bin/env ruby
# frozen_string_literal: true

require "kbsecret"
require "tty-prompt"

include KBSecret

$VERBOSE = nil # tty-prompt blasts us with irrelevant warnings on 2.4

cmd = CLI.new do
  slop do |o|
    o.banner = <<~EOS
      Delete a record.

      Usage:
        kbsecret rm [--session <name>] [--interactive] <label>
    EOS

    o.string "-s", "--session", "the session name", default: :default
    o.bool "-i", "--interactive", "ask for confirmation before deleting"
  end

  dreck do
    string :label
  end

  ensure_session!
end

label   = cmd.args[:label]
session = Session.new label: cmd.opts[:session]

CLI.die "I can't delete a nonexistent record." unless session.record? label

tty = TTY::Prompt.new

confirm = if cmd.opts.interactive?
            tty.yes?("Delete '#{label}' from the #{session.label} session?")
          else true
          end

session.delete_record(label) if confirm
