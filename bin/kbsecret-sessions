#!/usr/bin/env ruby
# frozen_string_literal: true

require "kbsecret"

include KBSecret

cmd = CLI.new do
  slop do |o|
    o.banner = <<~EOS
      List all available sessions.
      The sessions listed can be passed to other commands via the -s flag.

      Usage:
        kbsecret sessions [--show-all]
    EOS

    o.bool "-a", "--show-all", "show each session in depth (i.e. metadata)"
  end
end

Config.session_labels.each do |sess_name|
  session_hash = Config.session(sess_name)
  session      = Session.new label: sess_name

  puts sess_name

  next unless cmd.opts.show_all?

  puts <<~EOS
    \tUsers: #{session_hash[:users].join(", ")}
    \tSecrets root: #{session_hash[:root]} (#{session.directory})
  EOS
end
